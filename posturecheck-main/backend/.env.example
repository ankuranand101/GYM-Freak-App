# PostureGuard AI Backend Environment Variables

# Flask Configuration
FLASK_DEBUG=true
FLASK_PORT=5000
SECRET_KEY=your-secret-key-here

# CORS Configuration (comma-separated URLs)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080

# MediaPipe Configuration
MEDIAPIPE_MODEL_COMPLEXITY=1
CONFIDENCE_THRESHOLD=0.7
TRACKING_CONFIDENCE=0.5

# Posture Detection Rules - Squat
SQUAT_KNEE_TOE_THRESHOLD=10
SQUAT_BACK_ANGLE_MIN=150
SQUAT_DEPTH_THRESHOLD=90

# Posture Detection Rules - Desk Sitting
DESK_NECK_ANGLE_MAX=30
DESK_BACK_STRAIGHT_TOLERANCE=15
DESK_SHOULDER_LEVEL_TOLERANCE=10

# File Upload Configuration
UPLOAD_FOLDER=/tmp/uploads
MAX_CONTENT_LENGTH=104857600

# Session Configuration
SESSION_TIMEOUT=3600
MAX_SESSIONS=100

# Analysis Configuration
ANALYSIS_FRAME_SKIP=5
MAX_KEYPOINTS_HISTORY=100

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=posture_guard.log

# Production Deployment (uncomment for production)
# FLASK_DEBUG=false
# CORS_ORIGINS=https://your-frontend-domain.com
# SECRET_KEY=your-production-secret-key